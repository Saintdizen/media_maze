{
  "name": "media-maze",
  "productName": "Media Maze",
  "description": "Media Maze",
  "version": "0.1.8",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "debs": "npm install --save --legacy-peer-deps --force",
    "postinstall": "electron-builder install-app-deps",
    "linux": "electron-builder --linux --publish always",
    "win": "electron-builder --win --publish always",
    "mac": "electron-builder --mac --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Saintdizen/media_maze.git"
  },
  "keywords": [
    "Media"
  ],
  "build": {
    "asar": false,
    "publish": {
      "provider": "github",
      "owner": "saintdizen",
      "repo": "media_maze",
      "releaseType": "release"
    },
    "artifactName": "${name}-${os}-${arch}-${version}.${ext}",
    "appId": "com.media.maze",
    "linux": {
      "category": "Media",
      "target": ["AppImage"],
      "desktop": {
        "Name": "Media Maze",
        "Terminal": "false"
      }
    },
    "win": {
      "icon": "resources/icons/app/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerHeaderIcon": "resources/icons/app/icon.ico",
      "installerIcon": "resources/icons/app/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "hardenedRuntime": true,
      "gatekeeperAssess": true,
      "extendInfo": {
        "NSAppleEventsUsageDescription": "Let me use Apple Events.",
        "NSCameraUsageDescription": "Let me use the camera.",
        "NSScreenCaptureDescription": "Let me take screenshots."
      }
    },
    "dmg": {
      "iconSize": 100,
      "contents": [
        {
          "x": 255,
          "y": 85,
          "type": "file"
        },
        {
          "x": 253,
          "y": 325,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "files": [
      "main.js",
      "resources/**/*",
      "app/**/*"
    ]
  },
  "author": {
    "name": "Chuvakhin Ivan",
    "email": "saintdizen@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Saintdizen/media_maze/issues"
  },
  "homepage": "https://github.com/Saintdizen/media_maze#readme",
  "devDependencies": {
    "electron-builder": "~23.6.0"
  },
  "dependencies": {
    "chuijs": "~1.7.4"
  }
}
